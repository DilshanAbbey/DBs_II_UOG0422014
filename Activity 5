// Creating the procedure

CREATE OR REPLACE PROCEDURE get_product_by_id(product_id_par INT)
RETURNS TABLE(product_id INT, name VARCHAR(255), price FLOAT, stock_quantity INT)
LANGUAGE plpgsql
AS
$$
BEGIN
	RETURN QUERY
	SELECT * FROM product WHERE product_id = product_id_par;
END;
$$;

// Calling the procedure

SELECT * FROM get_product_by_id(1);
